    <main role="main">
       <%= render 'layouts/messages' %>
       <%= yield %>
    </main>

    <div class="footer">
    <div class="col-md-4">
    
    </div>
    <div class="col-md-4">
    <%= render 'layouts/footer' %>
    </div>
    <div class="col-md-4">
    
    </div>

    </div>
    </div>
  </body>
</html>
